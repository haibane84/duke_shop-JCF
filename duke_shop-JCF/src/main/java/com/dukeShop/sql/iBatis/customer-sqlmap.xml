<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD SQL Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>

<sqlMap namespace="customer">

	<statement id="select" resultClass="com.dukeShop.model.Customer">
		select * from customer
	</statement>

	<insert id = "insert" parameterClass="com.dukeShop.model.Customer">
		insert into customer values(
		#id#,
		#passwd#,
		#phone#,
		#email#,
		#name#
		)
	</insert>

	<update id = "update" parameterClass="com.dukeShop.model.Customer">
		update customer set(
		id = #id#,
		passwd = #passwd#,
		phone = #phone#,
		email = #email#,
		name = #name#
		)
	</update>

	<statement id="delete" parameterClass="com.dukeShop.model.Customer">
		delete from customer where id = #id#
	</statement>
</sqlMap>