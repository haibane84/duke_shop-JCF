<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD SQL Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>

<sqlMap namespace="product">
	<statement id="select" resultClass="com.dukeShop.model.Product">
		select * from product
	</statement>



<insert id = "insert" parameterClass="com.dukeShop.model.Product">
   insert into Product values(	
	    #pid#,
		#pname#,
		 #photo#,
		 #desc#,
		 #price#,
		#stock#

   )
</insert>



	<update id="update" parameterClass="com.dukeShop.model.Product">

		update PRODUCT SET pname = #pname# where pid = #pid#

	</update>


	<delete id="delete" parameterClass="com.dukeShop.model.Product">


		delete from PRODUCT Where pid = #pid#

	</delete>

















</sqlMap>
