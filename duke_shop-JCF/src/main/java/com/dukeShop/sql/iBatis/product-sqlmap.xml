<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD SQL Map 2.0//EN'
'http://ibatis.apache.org/dtd/sql-map-2.dtd'>

<sqlMap namespace ="product">
	<statement id ="select" resultClass="com.dukeShop.model.Product">
		select * from product
	</statement>

	<insert id ="insert" parameterClass="com.dukeShop.model.Product">
		INSERT INTO PRODUCT VALUES (
			#pid#,
			#pname#,
			#photo#,
			#description#,
			#price#,
			#stock#
		)
	</insert>

	<delete id="delete" parameterClass="com.dukeShop.model.Product">
		DELETE FROM PRODUCT WHERE pid = #pid#
	</delete>

	<statement id ="update" parameterClass="com.dukeShop.model.Product">
		UPDATE PRODUCT SET
			pname =	#pname#,
			photo = #photo#,
			description = #description#,
			price = #price#,
			stock = #stock#

		WHERE pid = #pid#
	</statement>

</sqlMap>
