<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD SQL Map 2.0//EN'
'http://ibatis.apache.org/dtd/sql-map-2.dtd'>

<sqlMap namespace ="customer">

	<statement id = "select" resultClass= "com.dukeShop.model.Customer">
		select * from customer
	</statement>

	<statement id = "find" parameterClass="java.util.Map" resultClass= "com.dukeShop.model.Customer">
		SELECT * FROM CUSTOMER

		<dynamic prepend="where">
			<isNotEmpty property="id" prepend="and">
				id = #id#
			</isNotEmpty>
		</dynamic>
	</statement>


	<insert id ="insert" parameterClass="com.dukeShop.model.Customer">
		INSERT INTO CUSTOMER (
			id,
			passwd,
			phone,
			email,
			name

		)VALUES (
			#id#,
			#passwd#,
			#phone#,
			#email#,
			#name#

		)
	</insert>

	<delete id="delete" parameterClass="com.dukeShop.model.Customer">
		DELETE FROM CUSTOMER WHERE id = #id#
	</delete>


	<statement id ="update" parameterClass="com.dukeShop.model.Customer">
		UPDATE CUSTOMER SET
			id= #id#,
			name= #name#,
			passwd = #passwd#,
			email = #email#,
			phone = #phone#
		WHERE id = #id#
	</statement>


</sqlMap>
