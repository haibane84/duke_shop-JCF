<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD SQL Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="product">
	<statement id="select" resultClass="com.dukeShop.model.Product">
		select * from product
	</statement>
	<insert id="insert" parameterClass="com.dukeShop.model.Product">
		insert into product values(
		#pid#,
		#pname#,
		#photo#,
		#description#,
		#price#,
		#stock#
		)
	</insert>
	<statement id="update" parameterClass="com.dukeShop.model.Product">
		update product set price=#price#,
		stock=#stock# where pid=#pid#
	</statement>

	<statement id="delete" parameterClass="com.dukeShop.model.Product">
		delete from product where pid=#pid#
	</statement>
</sqlMap>